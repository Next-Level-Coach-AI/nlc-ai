{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "nodenext",
    "types": [
      "node"
    ],
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "target": "es2021",
    "paths": {
      "@nlc-ai/api-types": ["../../../libs/api/types/src"],
      "@nlc-ai/api-database": ["../../../libs/api/database/src"],
      "@nlc-ai/api-messaging": ["../../../libs/api/messaging/src"],
      "@nlc-ai/api-validation": ["../../../libs/api/validation/src"],
      "@nlc-ai/api-auth": ["../../../libs/api/auth/src"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../../libs/api/types/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/api/messaging/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/api/database/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/api/auth/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/api/validation/tsconfig.lib.json"
    }
  ]
}
